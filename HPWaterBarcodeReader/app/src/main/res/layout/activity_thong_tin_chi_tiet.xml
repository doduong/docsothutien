    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgwater">


    <TextView
        android:id="@+id/tentuyen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:editable="false"
        android:textColor="@color/red"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtdanhba"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bovien"
            android:textSize="18sp"
            android:editable="false"
            android:hint="Mã khách hàng" />

        <EditText
            android:id="@+id/edtsodongho"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:editable="false"
            android:layout_weight="1"
            android:background="@drawable/bovien"
            android:textSize="18sp"
            android:hint="Seri ĐH" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/edttennguoithue"
            android:background="@drawable/bovien"
            android:hint="Tên khách hàng"
            android:editable="false"
            android:textSize="18sp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/edtDiaChi"
            android:hint="Địa chỉ"
            android:editable="false"
            android:textSize="18sp"
            android:background="@drawable/bovien"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="S.Cũ"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtSocu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/bovien"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/black"
            android:editable="false"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="right|center"
            android:editable="false"
            android:text="S.Mới"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtSomoi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:editable="false"
            android:background="@drawable/bovien"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <!--<TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.2"
            android:gravity="left|center"
            android:text="M3: "
            android:textColor="@color/black"
            android:textSize="18sp" /> -->

        <EditText
            android:id="@+id/edttieuthu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/bovien"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20sp"
            android:editable="false"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">


        <TextView
            android:id="@+id/textView24"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:text="3T"
            android:textColor="@color/black"
            android:editable="false"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtTT3T"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.3"
            android:background="@drawable/bovien"
            android:gravity="center_vertical|center_horizontal"
            android:editable="false"
            android:textColor="@color/black" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:editable="false"
            android:text="TB"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtTBTT"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/bovien"
            android:textColor="@color/black"
            android:editable="false"
            android:gravity="center_vertical|center_horizontal" />

       <!-- <Button
            android:id="@+id/btnLuuChiSoMoi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/button_style"
            android:text="Lưu"
            android:textColor="@color/white" /> -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="N.Đọc cũ"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="N.Đọc mới"
            android:textColor="@color/black"
            android:textSize="18sp" />




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/edtngaydoccu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:editable="false"
            android:background="@drawable/bovien"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtngaydocmoi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
