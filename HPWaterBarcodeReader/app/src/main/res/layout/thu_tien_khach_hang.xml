<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgwater">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtdanhba"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bovien"
            android:textSize="18sp"
            android:editable="false"
            android:hint="Mã khách hàng" />

        <EditText
            android:id="@+id/edtsohd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bovien"
            android:editable="false"
            android:hint="Số HĐ"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/edttennguoithue"
            android:background="@drawable/bovien"
            android:hint="Tên khách hàng"
            android:editable="false"
            android:textSize="18sp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/edtDiaChi"
            android:hint="Địa chỉ"
            android:editable="false"
            android:textSize="18sp"
            android:background="@drawable/bovien"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="S.Cũ"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtSocu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/bovien"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/black"
            android:editable="false"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="right|center"
            android:editable="false"
            android:text="S.Mới"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtSomoi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:editable="false"
            android:background="@drawable/bovien"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edttieuthu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/bovien"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="22sp"
            android:editable="false"
            android:textStyle="bold"
            android:textColor="@color/red" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:editable="false"
            android:text="Loại ĐD"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtloaidiemdung"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/bovien"
            android:textColor="@color/black"
            android:editable="false"
            android:gravity="center_vertical|center_horizontal" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:editable="false"
            android:text="Trạng thái ĐD"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txttrangthaidiemdung"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/bovien"
            android:textColor="@color/black"
            android:editable="false"
            android:gravity="center_vertical|center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">


        <TextView
            android:id="@+id/textView24"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:text="Tiền nước"
            android:textColor="@color/black"
            android:editable="false"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edttiennuoc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/bovien"
            android:editable="false"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/black" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">


        <TextView
            android:id="@+id/tvTienDVTN"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:text="Tiền DVTN"
            android:textColor="@color/black"
            android:editable="false"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtTienDVTN"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/bovien"
            android:gravity="center_vertical|center_horizontal"
            android:editable="false"
            android:textColor="@color/black" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:editable="false"
            android:text="VAT 5%"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtVAT5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/bovien"
            android:textColor="@color/black"
            android:editable="false"
            android:gravity="center_vertical|center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:editable="false"
            android:text="VAT 10%"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtVAT10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/bovien"
            android:textColor="@color/black"
            android:editable="false"
            android:gravity="center_vertical|center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">


        <TextView
            android:id="@+id/tvTongTien"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:text="Tổng Tiền"
            android:textColor="@color/black"
            android:editable="false"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtTongTien"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/bovien"
            android:gravity="center_vertical|center_horizontal"
            android:editable="false"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/red" />


    </LinearLayout>





    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">


        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/chktinhPTN"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Tính PTN"
            android:textSize="18sp"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnkenoimayin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4px"
                    android:layout_marginRight="4px"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:text="Kết nối máy in"
                    android:textColor="@color/white" />

               <Button
                    android:id="@+id/btnGuiTinNhan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:text="Gửi Tin Nhắn"
                    android:textColor="@color/white" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                >

                <Button
                    android:id="@+id/btnInGachNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4px"
                    android:layout_marginRight="4px"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:text="In Biên Nhận"
                    android:textColor="@color/white" />


            </TableRow>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                >



                <Button
                    android:id="@+id/btnInKhongGachNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4px"
                    android:layout_marginRight="4px"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:text="In Giấy Báo"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnInLaiBienNhan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4px"
                    android:layout_marginRight="4px"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:text="In Lại Biên Nhận"
                    android:textColor="@color/white" />


            </TableRow>



